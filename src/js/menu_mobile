const  openBurgerBtn =document.querySelector(".open__menu__btn");
const  closeBurgerBtn =document.querySelector(".close__menu__btn");
const  heroBtnSearch = document.querySelector(".hero__screen__btn__search");
const  sideMenu  = document.querySelector(".navigation");

const toggleMenu = () =>  { 
    sideMenu.classList.toggle('is_open');
    heroBtnSearch.classList.toggle('is_visible');
};
openBurgerBtn.addEventListener('click', toggleMenu);
// closeBurgerBtn.addEventListener('click', toggleMenu);